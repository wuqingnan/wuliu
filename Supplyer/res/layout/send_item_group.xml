<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_name"
        style="@style/TextAppearance.Small.666666"
        android:layout_width="@dimen/send_label_width"
        android:layout_height="@dimen/send_item_height"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/send_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp" >

        <RadioButton
            android:id="@+id/message_free_yes"
            style="@style/TextAppearance.Small.333333"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/radiobutton"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/free_yes"
            android:textColor="@color/text_color_dark_gray" />

        <RadioButton
            android:id="@+id/message_free_no"
            style="@style/TextAppearance.Small.333333"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/radiobutton"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/free_no"
            android:textColor="@color/text_color_dark_gray" />
    </RadioGroup>

</LinearLayout>