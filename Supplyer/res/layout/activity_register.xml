<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_back" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar"
        android:layout_marginTop="@dimen/default_marginTop"
        android:layout_marginLeft="@dimen/default_marginLeft"
        android:layout_marginRight="@dimen/default_marginRight"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <cn.boweikeji.wuliu.supplyer.view.ClearEditText
            android:id="@+id/register_phone"
            style="@style/ClearEditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_register_username"
            android:inputType="phone"
            android:maxLength="11" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >
            
            <Button
                android:id="@+id/register_get_code"
                style="@style/TextAppearance.Middle.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/get_verify_code"
                android:enabled="false" />

            <cn.boweikeji.wuliu.supplyer.view.ClearEditText
                android:id="@+id/register_code"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/register_get_code"
                android:hint="@string/hint_register_code"
                android:inputType="number"
                android:maxLength="4" />
        </RelativeLayout>

        <cn.boweikeji.wuliu.supplyer.view.ClearEditText
            android:id="@+id/register_password"
            style="@style/ClearEditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/hint_register_password"
            android:inputType="textPassword"
            android:maxLength="16" />

        <cn.boweikeji.wuliu.supplyer.view.ClearEditText
            android:id="@+id/register_id"
            style="@style/ClearEditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/hint_register_id"
            android:maxLength="18" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_holo_light"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextAppearance.Middle.LightGray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/label_user_type" />

            <TextView
                android:id="@+id/register_user_type"
                style="@style/TextAppearance.Middle.LightGray"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/register_submit"
            style="@style/TextAppearance.Big.White"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_default"
            android:text="@string/register" />
    </LinearLayout>

</RelativeLayout>