<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/login_titlebar"
        layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_titlebar"
        android:layout_marginTop="@dimen/default_marginTop"
        android:layout_marginLeft="@dimen/default_marginLeft"
        android:layout_marginRight="@dimen/default_marginRight"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <cn.boweikeji.wuliu.supplyer.view.ClearEditText
            android:id="@+id/password_old"
            style="@style/ClearEditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_old_password"
            android:inputType="number"
            android:maxLength="16" />
        
        <cn.boweikeji.wuliu.supplyer.view.ClearEditText
            android:id="@+id/password_new"
            style="@style/ClearEditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/hint_new_password"
            android:inputType="number"
            android:maxLength="16" />
        
        <cn.boweikeji.wuliu.supplyer.view.ClearEditText
            android:id="@+id/password_repeat"
            style="@style/ClearEditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/hint_repeat_password"
            android:inputType="number"
            android:maxLength="16" />

        <Button
            android:id="@+id/submit"
            style="@style/WuLiu.TextAppearance.Big.White"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_default"
            android:text="@string/submit" />
    </LinearLayout>

</RelativeLayout>