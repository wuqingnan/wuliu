<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WuLiu"/>
    
    <style name="home_tab">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/color_tab_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_bababa</item>
        <item name="android:textColorHint">@color/color_bababa</item>
        <item name="android:drawablePadding">@dimen/edittext_drawable_padding</item>
        <item name="android:drawableRight">@drawable/input_edit_clear</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="ItemLabel">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_bababa</item>
        <item name="android:textColorHint">@color/color_bababa</item>
        <item name="android:drawablePadding">@dimen/edittext_drawable_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="ItemValueWithArrow" parent="@style/TextAppearance.Small.LightGray">
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:drawablePadding">@dimen/edittext_drawable_padding</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
    
    <style name="ClearEditText">
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textColorHint">@color/text_color_light_gray</item>
        <item name="android:drawablePadding">@dimen/edittext_drawable_padding</item>
        <item name="android:drawableRight">@drawable/input_edit_clear</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ClearEditText.Light" >
        <item name="android:background">@drawable/edit_text_holo_light</item>
    </style>

    <style name="ClearEditText.Dark" >
        <item name="android:background">@drawable/edit_text_holo_dark</item>
    </style>
    
</resources>