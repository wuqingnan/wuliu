<resources>

    <style name="WuLiu"/>
    
    <style name="home_tab">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@drawable/color_home_tab</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Popup_My_Title">
        <item name="android:textColor">@color/text_color_orange</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>
    
    <style name="Popup_My_Info">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <style name="Popup_Driver_Name">
        <item name="android:textColor">@color/text_color_orange</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <style name="Popup_Driver_Info">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <style name="ClearEditText">
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textColorHint">@color/text_color_light_gray</item>
        <item name="android:drawablePadding">@dimen/edittext_drawable_padding</item>
        <item name="android:drawableRight">@drawable/input_edit_clear</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ClearEditText.Light" >
        <item name="android:background">@drawable/edit_text_holo_light</item>
    </style>

    <style name="ClearEditText.Dark" >
        <item name="android:background">@drawable/edit_text_holo_dark</item>
    </style>
    
</resources>