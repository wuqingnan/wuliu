<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp" >

    <TextView
        android:id="@+id/item_info"
        style="@style/TextAppearance.Micro.9a9a9a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/item_info"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_name"
            style="@style/TextAppearance.Small.474747"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/item_date"
            style="@style/TextAppearance.Micro.9a9a9a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/item_code"
            style="@style/TextAppearance.Micro.474747"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_bespeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_actual" />
</RelativeLayout>