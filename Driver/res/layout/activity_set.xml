<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_more"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_more_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextAppearance.Small.White"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/ic_push"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/push_switch" />

        <ToggleButton
            android:id="@+id/push_switch"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/btn_toggle"
            android:checked="true"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_cccccc" />

    <LinearLayout
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_more_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextAppearance.Small.White"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/ic_update"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/check_update" />

        <TextView
            android:id="@+id/version"
            style="@style/TextAppearance.Small.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="@string/check_update" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_cccccc" />

    <TextView
        android:id="@+id/about"
        style="@style/TextAppearance.Small.White"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_more_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_about"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:text="@string/about" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_cccccc" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_default_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_default"
        android:text="@string/logout" />

</LinearLayout>