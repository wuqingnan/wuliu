<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_marginLeft"
        android:layout_marginRight="@dimen/default_marginRight"
        android:layout_marginTop="@dimen/default_marginTop"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <cn.boweikeji.wuliu.driver.view.ClearEditText
            android:id="@+id/register_phone"
            style="@style/ClearEditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/phone"
            android:inputType="phone"
            android:maxLength="11" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/register_get_code"
                style="@style/WuLiu.TextAppearance.Middle.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:background="@drawable/btn_default"
                android:enabled="false"
                android:text="@string/get_verify_code" />

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_code"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/register_get_code"
                android:hint="@string/vertify_code"
                android:inputType="number"
                android:maxLength="4" />
        </RelativeLayout>

        <Button
            android:id="@+id/next_step"
            style="@style/WuLiu.TextAppearance.Big.White"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_default"
            android:text="@string/next_step" />
    </LinearLayout>

</LinearLayout>