<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_marginLeft"
            android:layout_marginRight="@dimen/default_marginRight"
            android:paddingBottom="@dimen/default_marginBottom"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_phone"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/phone"
                android:inputType="phone"
                android:maxLength="11" />

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_password"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="16" />

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_name"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/name"
                android:maxLength="8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_holo_light"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/label_driver_type" />

                <TextView
                    android:id="@+id/register_driver_type"
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_holo_light"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/label_area_code" />

                <TextView
                    android:id="@+id/register_area_code"
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center" />
            </LinearLayout>

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_id"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/id_number"
                android:maxLength="18" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_holo_light"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/label_id_front" />

                <TextView
                    android:id="@+id/register_id_front"
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_holo_light"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/label_truck_type" />

                <TextView
                    android:id="@+id/register_truck_type"
                    style="@style/WuLiu.TextAppearance.Middle.LightGray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center" />
            </LinearLayout>

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_truck_no"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/truck_no"
                android:maxLength="10" />

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_truck_load"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/truck_load"
                android:maxLength="3" />

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_recommend_no"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/recommend_no"
                android:maxLength="10" />

            <cn.boweikeji.wuliu.driver.view.ClearEditText
                android:id="@+id/register_remark"
                style="@style/ClearEditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/remark"
                android:maxLength="18" />

            <Button
                android:id="@+id/register_submit"
                style="@style/WuLiu.TextAppearance.Big.White"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_default_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_default"
                android:text="@string/register" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>