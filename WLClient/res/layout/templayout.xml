<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="177px"
        android:layout_alignParentBottom="true"
        android:background="#ECECEC"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="135px"
            android:layout_height="137px"
            android:layout_marginLeft="24px"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_call_left" >

            <ImageView
                android:id="@+id/call_left_icon"
                android:layout_width="58px"
                android:layout_height="58px"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_keyboard" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_width="600px"
            android:layout_height="137px"
            android:layout_toRightOf="@id/left_layout" >

            <TextView
                android:id="@+id/text_order_et"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/book_right_input"
                android:hint="@string/say_where_to_go"
                android:textColor="#ffffff"
                android:textColorHint="@color/text_color_light_gray"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/voice_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/book_right_speak_normal" />
        </RelativeLayout>

        <Button
            android:id="@+id/main_book"
            android:layout_width="283px"
            android:layout_height="137px"
            android:layout_marginRight="24px"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/right_layout"
            android:background="@drawable/btn_book" />
    </RelativeLayout>
</LinearLayout>
